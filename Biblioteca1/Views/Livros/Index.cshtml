@model IEnumerable<Biblioteca1.Livro>

@{
    ViewBag.Title = "Index";
}

<h2>Coleção</h2>

<p>
    @Html.ActionLink("Adicionar Livro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Editora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantidadeTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantidadeDisponivel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Editora)
        </td>   
        <td>
            @Html.DisplayFor(modelItem => item.QuantidadeTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuantidadeDisponivel)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) | 
           
            @Html.ActionLink("Ver detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })

        </td>
    </tr>
}

</table>
